<%- include('../partials/head') %>
<%- include('../partials/nav') %>

<div class="section" style="min-height: 80vh;">
  <div class="container admin-layout">
    <%- include('../partials/admin-sidebar', { currentPage: currentPage || 'index' }) %>

    <div class="admin-content">
      <h3>Xin chào, <%= user.name || user.username %></h3>
      <% const perms = permissions || userPermissions || []; %>
      <% if (!perms.length && user.role !== 1) { %>
        <p style="margin-top: 1rem; color: rgba(255,255,255,0.8);">
          Bạn chưa được cấp quyền quản trị nào, hãy liên hệ Admin.
        </p>
      <% } else { %>
        <p style="margin-top: 1rem; color: rgba(255,255,255,0.8);">
          Hãy chọn chức năng ở menu bên trái.
        </p>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer', { footerMenus: [] }) %>
<%- include('../partials/scripts') %>

<style>
  .admin-content {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 2rem;
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }
  .admin-content h3 {
    color: var(--main-color);
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }
</style>