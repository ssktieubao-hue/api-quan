<%- include('../partials/head') %>
<%- include('../partials/nav') %>

<div class="section" style="min-height: 80vh;">
  <div class="container admin-layout">
    <%- include('../partials/admin-sidebar', { currentPage: currentPage || 'tickets' }) %>

    <div class="admin-content">
      <h3>Danh sách vé</h3>
      <table class="admin-table">
        <thead>
          <tr>
            <th>Mã vé</th>
            <th>Phim</th>
            <th>Phòng</th>
            <th>Giờ chiếu</th>
            <th>Ghế</th>
            <th>Khách hàng</th>
            <th>Ngày mua</th>
            <th>Tổng tiền</th>
          </tr>
        </thead>
        <tbody>
          <% tickets.forEach(t => { %>
            <tr>
              <td><%= t.MaVe %></td>
              <td><%= t.TenPhim %></td>
              <td><%= t.TenPhong %></td>
              <td><%= t.GioChieu %></td>
              <td><%= t.GheNgoi %></td>
              <td><%= t.MaKH %></td>
              <td><%= t.NgayMua %></td>
              <td><%= t.TongTien %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer', { footerMenus: [] }) %>
<%- include('../partials/scripts') %>

<link rel="stylesheet" href="/css/admin-premium.css">
<style>
  .admin-content h3 {
    color: var(--main-color);
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
  }
</style>

