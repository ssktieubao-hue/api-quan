<%- include('../partials/head') %>
<%- include('../partials/nav') %>

<div class="section" style="min-height: 80vh;">
  <div class="container admin-layout">
    <%- include('../partials/admin-sidebar', { currentPage: currentPage || 'reports' }) %>

    <div class="admin-content">
      <h3>Doanh thu theo ngày</h3>
      <table class="admin-table">
        <thead>
          <tr>
            <th>Ngày</th>
            <th>Số giao dịch</th>
            <th>Tổng tiền</th>
          </tr>
        </thead>
        <tbody>
          <% byDate.forEach(r => { %>
            <tr>
              <td><%= r.Ngay %></td>
              <td><%= r.SoGD %></td>
              <td><%= r.TongTien %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <h3 style="margin-top:2rem;">Top phim theo doanh thu</h3>
      <table class="admin-table">
        <thead>
          <tr>
            <th>Mã phim</th>
            <th>Tên phim</th>
            <th>Số vé</th>
            <th>Doanh thu</th>
          </tr>
        </thead>
        <tbody>
          <% byFilm.forEach(f => { %>
            <tr>
              <td><%= f.MaPhim %></td>
              <td><%= f.TenPhim %></td>
              <td><%= f.SoVe %></td>
              <td><%= f.DoanhThu %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer', { footerMenus: [] }) %>
<%- include('../partials/scripts') %>

<link rel="stylesheet" href="/css/admin-premium.css">
<style>
  .admin-content h3 {
    color: var(--main-color);
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
  }
</style>

