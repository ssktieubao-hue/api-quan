<%- include('../partials/head') %>
<%- include('../partials/nav') %>

<div class="section" style="min-height: 80vh;">
  <div class="container admin-layout">
    <%- include('../partials/admin-sidebar', { currentPage: currentPage || 'showtimes' }) %>

    <div class="admin-content">
      <h3>Danh sách lịch chiếu</h3>
      <form method="GET" action="/admin/showtimes" class="admin-form-grid" style="margin-bottom:1rem;">
        <select name="filmId">
          <option value="">-- Tất cả phim --</option>
          <% films.forEach(f => { %>
            <option value="<%= f.MaPhim %>" <%= filmId === f.MaPhim ? 'selected' : '' %>><%= f.TenPhim %></option>
          <% }) %>
        </select>
        <button type="submit" class="btn btn-hover" style="grid-column:1/-1;max-width:200px;">Lọc</button>
      </form>
      <% if (error) { %>
        <p style="color:#ff6b6b; margin-bottom:1rem;"><%= error %></p>
      <% } %>
      <table class="admin-table">
        <thead>
          <tr>
            <th>Mã</th>
            <th>Phim</th>
            <th>Phòng</th>
            <th>Giờ chiếu</th>
            <th>Giá vé</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% showtimes.forEach(s => { %>
            <tr>
              <td><%= s.MaLich %></td>
              <td><%= s.TenPhim %></td>
              <td><%= s.TenPhong %></td>
              <td><%= s.GioChieu %></td>
              <td><%= s.GiaVe %></td>
              <td><%= s.TrangThai %></td>
              <td style="display:flex; gap:0.25rem;">
                <a href="/admin/showtimes/<%= s.MaLich %>/edit" class="btn btn-sm">Sửa</a>
                <form method="POST" action="/admin/showtimes/<%= s.MaLich %>/delete" onsubmit="return confirm('Xóa lịch chiếu này?');">
                  <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <h3 style="margin-top:2rem;">Thêm lịch chiếu</h3>
      <form method="POST" action="/admin/showtimes/add" class="admin-form-grid">
        <select name="MaPhim" required>
          <option value="">-- Chọn phim --</option>
          <% films.forEach(f => { %>
            <option value="<%= f.MaPhim %>"><%= f.TenPhim %></option>
          <% }) %>
        </select>
        <select name="MaPhong" required>
          <option value="">-- Chọn phòng --</option>
          <% rooms.forEach(r => { %>
            <option value="<%= r.MaPhong %>"><%= r.TenPhong %> (SC: <%= r.SucChua %>)</option>
          <% }) %>
        </select>
        <input type="datetime-local" name="GioChieu" required>
        <input type="number" name="GiaVe" placeholder="Giá vé" required>
        <button type="submit" class="btn btn-hover" style="grid-column:1/-1;">Thêm lịch chiếu</button>
      </form>

      <% if (editShowtime) { %>
        <h3 style="margin-top:2rem;">Sửa lịch chiếu #<%= editShowtime.MaLich %></h3>
        <form method="POST" action="/admin/showtimes/<%= editShowtime.MaLich %>/update" class="admin-form-grid">
          <select name="MaPhim" required>
            <% films.forEach(f => { %>
              <option value="<%= f.MaPhim %>" <%= f.MaPhim === editShowtime.MaPhim ? 'selected' : '' %>><%= f.TenPhim %></option>
            <% }) %>
          </select>
          <select name="MaPhong" required>
            <% rooms.forEach(r => { %>
              <option value="<%= r.MaPhong %>" <%= r.MaPhong === editShowtime.MaPhong ? 'selected' : '' %>><%= r.TenPhong %></option>
            <% }) %>
          </select>
          <input type="datetime-local" name="GioChieu" value="<%= editShowtime.GioChieu.toISOString ? editShowtime.GioChieu.toISOString().slice(0,16) : '' %>" required>
          <input type="number" name="GiaVe" value="<%= editShowtime.GiaVe %>" required>
          <select name="TrangThai">
            <option value="ACTIVE" <%= editShowtime.TrangThai === 'ACTIVE' ? 'selected' : '' %>>ACTIVE</option>
            <option value="CANCELLED" <%= editShowtime.TrangThai === 'CANCELLED' ? 'selected' : '' %>>CANCELLED</option>
            <option value="COMPLETED" <%= editShowtime.TrangThai === 'COMPLETED' ? 'selected' : '' %>>COMPLETED</option>
          </select>
          <button type="submit" class="btn btn-hover" style="grid-column:1/-1;">Cập nhật lịch chiếu</button>
        </form>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer', { footerMenus: [] }) %>
<%- include('../partials/scripts') %>

<link rel="stylesheet" href="/css/admin-premium.css">
<style>
  .admin-content h3 {
    color: var(--main-color);
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
  }
</style>

