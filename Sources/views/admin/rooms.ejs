<%- include('../partials/head') %>
<%- include('../partials/nav') %>

<div class="section" style="min-height: 80vh;">
  <div class="container admin-layout">
    <%- include('../partials/admin-sidebar', { currentPage: currentPage || 'rooms' }) %>

    <div class="admin-content">
      <h3>Danh sách phòng chiếu</h3>
      <form method="GET" action="/admin/rooms" class="admin-form-grid" style="margin-bottom:1rem;">
        <input type="text" name="search" placeholder="Tìm theo tên phòng" value="<%= typeof search !== 'undefined' ? search : '' %>">
        <button type="submit" class="btn btn-hover" style="grid-column:1/-1;max-width:200px;">Lọc</button>
      </form>
      <% if (error) { %>
        <p style="color:#ff6b6b; margin-bottom:1rem;"><%= error %></p>
      <% } %>
      <table class="admin-table">
        <thead>
          <tr>
            <th>Mã</th>
            <th>Tên phòng</th>
            <th>Sức chứa</th>
            <th>Mô tả</th>
            <th>Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% rooms.forEach(r => { %>
            <tr>
              <td><%= r.MaPhong %></td>
              <td><%= r.TenPhong %></td>
              <td><%= r.SucChua %></td>
              <td><%= r.MoTa || '-' %></td>
              <td style="display:flex; gap:0.25rem;">
                <a href="/admin/rooms/<%= r.MaPhong %>/edit" class="btn btn-sm">Sửa</a>
                <form method="POST" action="/admin/rooms/<%= r.MaPhong %>/delete" onsubmit="return confirm('Xóa phòng chiếu này?');">
                  <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <h3 style="margin-top:2rem;">Thêm phòng chiếu</h3>
      <form method="POST" action="/admin/rooms/add" class="admin-form-grid">
        <input type="text" name="TenPhong" placeholder="Tên phòng" required>
        <input type="number" name="SucChua" placeholder="Sức chứa" required>
        <textarea name="MoTa" placeholder="Mô tả" style="grid-column:1/-1; min-height:60px;"></textarea>
        <button type="submit" class="btn btn-hover" style="grid-column:1/-1;">Thêm phòng</button>
      </form>

      <% if (editRoom) { %>
        <h3 style="margin-top:2rem;">Sửa phòng: <%= editRoom.TenPhong %></h3>
        <form method="POST" action="/admin/rooms/<%= editRoom.MaPhong %>/update" class="admin-form-grid">
          <input type="text" name="TenPhong" value="<%= editRoom.TenPhong %>" required>
          <input type="number" name="SucChua" value="<%= editRoom.SucChua %>" required>
          <textarea name="MoTa" style="grid-column:1/-1; min-height:60px;"><%= editRoom.MoTa || '' %></textarea>
          <button type="submit" class="btn btn-hover" style="grid-column:1/-1;">Cập nhật phòng</button>
        </form>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer', { footerMenus: [] }) %>
<%- include('../partials/scripts') %>

<link rel="stylesheet" href="/css/admin-premium.css">
<style>
  .admin-content h3 {
    color: var(--main-color);
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
  }
</style>

