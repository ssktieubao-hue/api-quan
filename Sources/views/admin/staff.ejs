  .search-box input:focus {
    outline: none;
    border-color: var(--main-color);
    background: rgba(255, 255, 255, 0.15);
  }

  .search-box input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  /* Staff List */
  .staff-list {
    max-height: 600px;
    overflow-y: auto;
    padding-right: 0.5rem;
  }

  .staff-list::-webkit-scrollbar {
    width: 6px;
  }

  .staff-list::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
  }

  .staff-list::-webkit-scrollbar-thumb {
    background: var(--main-color);
    border-radius: 10px;
  }

  .staff-card {
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 1.5rem;
    cursor: pointer;
    transition: all 0.3s;
  }

  .staff-card:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--main-color);
    transform: translateX(4px);
  }

  .staff-card.active {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
    border-color: var(--main-color);
    box-shadow: 0 4px 20px rgba(102, 126, 234, 0.3);
  }

  .staff-avatar {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.8rem;
    color: white;
    flex-shrink: 0;
  }

  .staff-info {
    flex: 1;
    min-width: 0;
  }

  .staff-info h4 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: white;
  }

  .staff-email,
  .staff-phone {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 0.25rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .staff-badge {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .badge {
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .badge-staff {
    background: rgba(102, 126, 234, 0.3);
    color: #a5b4fc;
  }

  .badge-id {
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.7);
  }

  .staff-actions {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .action-btn {
    padding: 0.75rem;
    border-radius: 10px;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    text-decoration: none;
    color: white;
    font-size: 0.9rem;
  }

  .btn-permission {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    gap: 0.5rem;
  }

  .btn-permission:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .btn-edit {
    background: rgba(255, 193, 7, 0.2);
    color: #ffc107;
  }

  .btn-edit:hover {
    background: rgba(255, 193, 7, 0.3);
  }

  .btn-delete {
    background: rgba(244, 67, 54, 0.2);
    color: #f44336;
  }

  .btn-delete:hover {
    background: rgba(244, 67, 54, 0.3);
  }

  /* Form Styles */
  .premium-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
  }

  .form-group input {
    padding: 0.875rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    color: white;
    font-size: 0.95rem;
    transition: all 0.3s;
  }

  .form-group input:focus {
    outline: none;
    border-color: var(--main-color);
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

  .form-group input::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .current-value {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 0.25rem;
  }

  /* Buttons */
  .btn-premium {
    padding: 1rem 1.5rem;
    border-radius: 12px;
    border: none;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    transition: all 0.3s;
    text-decoration: none;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);
  }

  .btn-success {
    background: linear-gradient(135deg, #43a047 0%, #2e7d32 100%);
    color: white;
  }

  .btn-success:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(67, 160, 71, 0.4);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  /* Permissions */
  .selected-staff-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(102, 126, 234, 0.1);
    border-radius: 10px;
    margin-top: 1rem;
  }

  .selected-avatar {
    width: 50px;
    height: 50px;
    border-radius: 10px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: white;
  }

  .empty-state {
    text-align: center;
    padding: 3rem 2rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .empty-state i {
    font-size: 4rem;
    margin-bottom: 1rem;
    opacity: 0.5;
  }

  .empty-state h4 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .permissions-list {
    max-height: 500px;
    overflow-y: auto;
    padding-right: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .permissions-list::-webkit-scrollbar {
    width: 6px;
  }

  .permissions-list::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
  }

  .permissions-list::-webkit-scrollbar-thumb {
    background: var(--main-color);
    border-radius: 10px;
  }

  .permission-item {
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.25rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    transition: all 0.3s;
  }

  .permission-item:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(102, 126, 234, 0.5);
  }

  .permission-item.granted {
    background: rgba(67, 160, 71, 0.1);
    border-color: rgba(67, 160, 71, 0.3);
  }

  .permission-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex: 1;
  }

  .permission-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: rgba(102, 126, 234, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: var(--main-color);
  }

  .permission-item.granted .permission-icon {
    background: rgba(67, 160, 71, 0.2);
    color: #43a047;
  }

  .permission-details h4 {
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
    color: white;
  }

  .permission-code {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
    font-family: 'Courier New', monospace;
  }

  /* Toggle Switch */
  .toggle-switch {
    position: relative;
    display: inline-block;
    width: 60px;
    height: 30px;
  }

  .toggle-switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(255, 255, 255, 0.2);
    transition: 0.4s;
    border-radius: 30px;
  }

  .slider:before {
    position: absolute;
    content: "";
    height: 22px;
    width: 22px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    transition: 0.4s;
    border-radius: 50%;
  }

  input:checked + .slider {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  input:checked + .slider:before {
    transform: translateX(30px);
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

