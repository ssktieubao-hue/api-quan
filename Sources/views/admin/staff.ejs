  .premium-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 2rem;
  }

  @media (max-width: 1200px) {
    .premium-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Premium Card */
  .premium-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 2rem;
