<%- include('../partials/head') %>
<%- include('../partials/nav') %>

<div class="section" style="min-height: 80vh;">
  <div class="container admin-layout">
    <%- include('../partials/admin-sidebar', { currentPage: currentPage || 'staff' }) %>

    <div class="admin-content premium-staff">
      <!-- Header Section -->
      <div class="premium-header">
        <div class="header-content">
          <h1 class="premium-title">
            <i class='bx bx-user-check'></i>
            Phân Quyền Nhân Viên
          </h1>
          <p class="premium-subtitle">Quản lý và cấp quyền truy cập cho nhân viên hệ thống</p>
        </div>
        <div class="header-stats">
          <div class="stat-card">
            <i class='bx bx-group'></i>
            <div>
              <span class="stat-number"><%= staffList.length %></span>
              <span class="stat-label">Nhân viên</span>
            </div>
          </div>
          <div class="stat-card">
            <i class='bx bx-shield-quarter'></i>
            <div>
              <span class="stat-number"><%= allPermissions.length %></span>
              <span class="stat-label">Quyền hạn</span>
            </div>
          </div>
        </div>
      </div>

      <div class="premium-grid">
        <!-- Left Column: Staff List & Add Form -->
        <div class="premium-column">
          <!-- Staff List Card -->
          <div class="premium-card">
            <div class="card-header">
              <h3><i class='bx bx-list-ul'></i> Danh Sách Nhân Viên</h3>
              <div class="search-box">
                <i class='bx bx-search'></i>
                <input type="text" id="staffSearch" placeholder="Tìm kiếm nhân viên...">
              </div>
            </div>
            
            <div class="staff-list" id="staffListContainer">
              <% staffList.forEach((nv, index) => { %>
                <div class="staff-card <%= selectedId === nv.MaKH ? 'active' : '' %>" 
                     data-staff-id="<%= nv.MaKH %>"
                     onclick="selectStaff(<%= nv.MaKH %>)">
                  <div class="staff-avatar">
                    <i class='bx bx-user'></i>
                  </div>
                  <div class="staff-info">
                    <h4><%= nv.TenKH %></h4>
                    <p class="staff-email"><i class='bx bx-envelope'></i> <%= nv.Email || 'Chưa có email' %></p>
                    <p class="staff-phone"><i class='bx bx-phone'></i> <%= nv.SDT || 'Chưa có SĐT' %></p>
                    <div class="staff-badge">
                      <span class="badge badge-staff">Nhân viên</span>
                      <span class="badge badge-id">ID: <%= nv.MaKH %></span>
                    </div>
                  </div>
                  <div class="staff-actions">
                    <a href="/admin/staff?staffId=<%= nv.MaKH %>" 
                       class="action-btn btn-permission" 
                       onclick="event.stopPropagation()">
                      <i class='bx bx-key'></i>
                      <span>Cấp quyền</span>
                    </a>
                    <a href="/admin/staff?staffId=<%= nv.MaKH %>#edit-info" 
                       class="action-btn btn-edit"
                       onclick="event.stopPropagation()">
                      <i class='bx bx-edit'></i>
                    </a>
                    <form method="POST" 
                          action="/admin/staff/<%= nv.MaKH %>/delete" 
                          onsubmit="return confirm('Bạn có chắc muốn xóa nhân viên <%= nv.TenKH %>?');"
                          onclick="event.stopPropagation()">
                      <button type="submit" class="action-btn btn-delete">
                        <i class='bx bx-trash'></i>
                      </button>
                    </form>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>

          <!-- Add Staff Card -->
          <div class="premium-card add-staff-card">
            <div class="card-header">
              <h3><i class='bx bx-user-plus'></i> Thêm Nhân Viên Mới</h3>
            </div>
            <form method="POST" action="/admin/staff/add" class="premium-form">
              <div class="form-group">
                <label><i class='bx bx-user'></i> Họ và tên</label>
                <input type="text" name="TenKH" placeholder="Nhập họ tên" required>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label><i class='bx bx-phone'></i> Số điện thoại</label>
                  <input type="text" name="SDT" placeholder="0123456789">
                </div>
                <div class="form-group">
                  <label><i class='bx bx-envelope'></i> Email</label>
                  <input type="email" name="Email" placeholder="email@example.com" required>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label><i class='bx bx-user-circle'></i> Tên đăng nhập</label>
                  <input type="text" name="TenDangNhap" placeholder="username" required>
                </div>
                <div class="form-group">
                  <label><i class='bx bx-lock'></i> Mật khẩu</label>
                  <input type="password" name="MatKhau" placeholder="••••••••" required>
                </div>
              </div>
              <button type="submit" class="btn-premium btn-primary">
                <i class='bx bx-plus'></i>
                Tạo Nhân Viên
              </button>
            </form>
          </div>
        </div>

        <!-- Right Column: Permissions -->
        <div class="premium-column">
          <div class="premium-card permissions-card">
            <div class="card-header">
              <h3><i class='bx bx-shield-quarter'></i> Quản Lý Quyền Hạn</h3>
              <% if (selectedId) { %>
                <% const nvSelected = staffList.find(nv => nv.MaKH === selectedId); %>
                <div class="selected-staff-info">
                  <div class="selected-avatar">
                    <i class='bx bx-user'></i>
                  </div>
                  <div>
                    <strong><%= nvSelected.TenKH %></strong>
                    <p><%= nvSelected.Email %></p>
                  </div>
                </div>
              <% } %>
            </div>

            <% if (!selectedId) { %>
              <div class="empty-state">
                <i class='bx bx-info-circle'></i>
                <h4>Chưa chọn nhân viên</h4>
                <p>Vui lòng chọn một nhân viên từ danh sách bên trái để bắt đầu cấp quyền.</p>
              </div>
            <% } else { %>
              <form method="POST" action="/admin/staff/<%= selectedId %>/permissions" class="permissions-form">
                <div class="permissions-list">
                  <% allPermissions.forEach(q => { 
                       const isGranted = selectedPermissions.includes(q.MaQuyen);
                  %>
                    <div class="permission-item <%= isGranted ? 'granted' : '' %>">
                      <div class="permission-info">
                        <div class="permission-icon">
                          <i class='bx bx-<%= isGranted ? 'check-circle' : 'circle' %>'></i>
                        </div>
                        <div class="permission-details">
                          <h4><%= q.TenQuyen %></h4>
                          <p class="permission-code"><%= q.MaCode %></p>
                        </div>
                      </div>
                      <label class="toggle-switch">
                        <input type="checkbox" 
                               name="permissions" 
                               value="<%= q.MaQuyen %>" 
                               <%= isGranted ? 'checked' : '' %>
                               onchange="updatePermissionStatus(this)">
                        <span class="slider"></span>
                      </label>
                    </div>
                  <% }) %>
                </div>
                
                <div class="form-actions">
                  <button type="submit" class="btn-premium btn-success">
                    <i class='bx bx-check'></i>
                    Xác Nhận Quyền
                  </button>
                  <a href="/admin/staff" class="btn-premium btn-secondary">
                    <i class='bx bx-x'></i>
                    Hủy
                  </a>
                </div>
              </form>

              <!-- Edit Staff Info -->
              <% const nvSelected = staffList.find(nv => nv.MaKH === selectedId); %>
              <% if (nvSelected) { %>
                <div class="premium-card edit-staff-card" id="edit-info">
                  <div class="card-header">
                    <h3><i class='bx bx-edit-alt'></i> Cập Nhật Thông Tin</h3>
                  </div>
                  <form method="POST" action="/admin/staff/<%= nvSelected.MaKH %>/update" class="premium-form">
                    <div class="form-group">
                      <label><i class='bx bx-user'></i> Họ tên</label>
                      <div class="current-value">Hiện tại: <strong><%= nvSelected.TenKH %></strong></div>
                      <input type="text" name="TenKH" placeholder="Để trống nếu giữ nguyên">
                    </div>
                    <div class="form-group">
                      <label><i class='bx bx-phone'></i> Số điện thoại</label>
                      <div class="current-value">Hiện tại: <strong><%= nvSelected.SDT || 'Chưa có' %></strong></div>
                      <input type="text" name="SDT" placeholder="Để trống nếu giữ nguyên">
                    </div>
                    <div class="form-group">
                      <label><i class='bx bx-envelope'></i> Email</label>
                      <div class="current-value">Hiện tại: <strong><%= nvSelected.Email || 'Chưa có' %></strong></div>
                      <input type="email" name="Email" placeholder="Để trống nếu giữ nguyên">
                    </div>
                    <div class="form-actions">
                      <button type="submit" class="btn-premium btn-primary">
                        <i class='bx bx-save'></i>
                        Lưu Thay Đổi
                      </button>
                      <a href="/admin/staff?staffId=<%= nvSelected.MaKH %>" class="btn-premium btn-secondary">
                        <i class='bx bx-x'></i>
                        Hủy
                      </a>
                    </div>
                  </form>
                </div>
              <% } %>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer', { footerMenus: [] }) %>
<%- include('../partials/scripts') %>

