  .card-header h3 {
    font-size: 1.5rem;
    color: var(--main-color);
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .card-header h3 i {
    font-size: 1.5rem;
  }

  /* Search Box */
  .search-box {
    position: relative;
    margin-top: 1rem;
  }

  .search-box i {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: rgba(255, 255, 255, 0.6);
  }

  .search-box input {
    width: 100%;
    padding: 0.75rem 1rem 0.75rem 3rem;
    background: rgba(255, 255, 255, 0.1);
