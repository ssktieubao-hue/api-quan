<!-- Premium Admin Sidebar -->
<div class="premium-sidebar">
  <div class="sidebar-header">
    <div class="sidebar-icon">
      <i class='bx bx-cog'></i>
    </div>
    <h2>Quản trị hệ thống</h2>
    <p class="sidebar-subtitle">Control Panel</p>
  </div>
  <ul class="premium-menu">
    <% const perms = userPermissions || []; %>
    <% const currentPath = typeof currentPage !== 'undefined' ? currentPage : ''; %>

    <% if (user.role === 1 || perms.includes('USER_MANAGE')) { %>
      <li>
        <a href="/admin/staff" class="menu-item <%= currentPath === 'staff' ? 'active' : '' %>">
          <div class="menu-icon">
            <i class='bx bx-user-check'></i>
          </div>
          <span class="menu-text">Phân quyền nhân viên</span>
          <div class="menu-indicator"></div>
        </a>
      </li>
    <% } %>

    <% if (user.role === 1 || perms.includes('MOVIE_MANAGE')) { %>
      <li>
        <a href="/admin/movies" class="menu-item <%= currentPage === 'movies' ? 'active' : '' %>">
          <div class="menu-icon">
            <i class='bx bx-movie'></i>
          </div>
          <span class="menu-text">Quản lý phim</span>
          <div class="menu-indicator"></div>
        </a>
      </li>
    <% } %>

    <% if (user.role === 1 || perms.includes('ROOM_MANAGE')) { %>
      <li>
        <a href="/admin/rooms" class="menu-item <%= currentPage === 'rooms' ? 'active' : '' %>">
          <div class="menu-icon">
            <i class='bx bx-building'></i>
          </div>
          <span class="menu-text">Quản lý phòng chiếu</span>
          <div class="menu-indicator"></div>
        </a>
      </li>
    <% } %>

    <% if (user.role === 1 || perms.includes('SHOWTIME_MANAGE')) { %>
      <li>
        <a href="/admin/showtimes" class="menu-item <%= currentPage === 'showtimes' ? 'active' : '' %>">
          <div class="menu-icon">
            <i class='bx bx-calendar-event'></i>
          </div>
          <span class="menu-text">Quản lý lịch chiếu</span>
          <div class="menu-indicator"></div>
        </a>
      </li>
    <% } %>

    <% if (user.role === 1 || perms.includes('SERVICE_MANAGE')) { %>
      <li>
        <a href="/admin/services" class="menu-item <%= currentPage === 'services' ? 'active' : '' %>">
          <div class="menu-icon">
            <i class='bx bx-store'></i>
          </div>
          <span class="menu-text">Quản lý dịch vụ</span>
          <div class="menu-indicator"></div>
        </a>
      </li>
    <% } %>

    <% if (user.role === 1 || perms.includes('TICKET_VIEW')) { %>
      <li>
        <a href="/admin/tickets" class="menu-item <%= currentPage === 'tickets' ? 'active' : '' %>">
          <div class="menu-icon">
            <i class='bx bx-ticket'></i>
          </div>
          <span class="menu-text">Quản lý vé</span>
          <div class="menu-indicator"></div>
        </a>
      </li>
    <% } %>

    <% if (user.role === 1 || perms.includes('TMP_TRANSACTION_VIEW')) { %>
      <li>
        <a href="/admin/tmp-transactions" class="menu-item <%= currentPage === 'tmp-transactions' ? 'active' : '' %>">
          <div class="menu-icon">
            <i class='bx bx-time-five'></i>
          </div>
          <span class="menu-text">Quản lý giao dịch tạm</span>
          <div class="menu-indicator"></div>
        </a>
      </li>
    <% } %>

    <% if (user.role === 1 || perms.includes('REPORT_VIEW')) { %>
      <li>
        <a href="/admin/reports" class="menu-item <%= currentPage === 'reports' ? 'active' : '' %>">
          <div class="menu-icon">
            <i class='bx bx-bar-chart-alt-2'></i>
          </div>
          <span class="menu-text">Báo cáo doanh thu</span>
          <div class="menu-indicator"></div>
        </a>
      </li>
    <% } %>
  </ul>
</div>

<style>
  /* Premium Sidebar Styles */
  .premium-sidebar {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 2rem;
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    height: fit-content;
    position: sticky;
    top: 2rem;
  }

  .sidebar-header {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid rgba(255, 255, 255, 0.1);
  }

  .sidebar-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 1rem;
    border-radius: 16px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    color: white;
    box-shadow: 0 4px 20px rgba(102, 126, 234, 0.3);
  }

  .premium-sidebar h2 {
    font-size: 1.5rem;
    color: white;
    margin-bottom: 0.5rem;
    font-weight: 700;
  }

  .sidebar-subtitle {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
  }

  .premium-menu {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .premium-menu li {
    margin: 0;
  }

  .menu-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    border-radius: 12px;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid transparent;
    transition: all 0.3s;
    position: relative;
    overflow: hidden;
  }

  .menu-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 4px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transform: scaleY(0);
    transition: transform 0.3s;
  }

  .menu-item:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(102, 126, 234, 0.3);
    transform: translateX(4px);
    color: white;
  }

  .menu-item:hover::before {
    transform: scaleY(1);
  }

  .menu-item.active {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
    border-color: rgba(102, 126, 234, 0.5);
    color: white;
    box-shadow: 0 4px 20px rgba(102, 126, 234, 0.2);
  }

  .menu-item.active::before {
    transform: scaleY(1);
  }

  .menu-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: rgba(102, 126, 234, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    color: var(--main-color);
    transition: all 0.3s;
    flex-shrink: 0;
  }

  .menu-item:hover .menu-icon,
  .menu-item.active .menu-icon {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    transform: scale(1.1);
  }

  .menu-text {
    flex: 1;
    font-size: 0.95rem;
    font-weight: 500;
    transition: all 0.3s;
  }

  .menu-item.active .menu-text {
    font-weight: 600;
  }

  .menu-indicator {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    opacity: 0;
    transition: all 0.3s;
  }

  .menu-item.active .menu-indicator {
    opacity: 1;
    background: var(--main-color);
    box-shadow: 0 0 10px rgba(102, 126, 234, 0.5);
  }

  /* Admin Layout */
  .admin-layout {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 2rem;
  }

  @media (max-width: 1200px) {
    .admin-layout {
      grid-template-columns: 1fr;
    }

    .premium-sidebar {
      position: relative;
      top: 0;
    }
  }
</style>
