<!-- MOVIE ITEM -->
<% 
var hasMaPhim = typeof film !== 'undefined' && film && film.MaPhim;
var href = hasMaPhim ? '/film/' + film.MaPhim : null;
if (typeof isLink !== 'undefined' && isLink && hasMaPhim) { %>
<a href="<%= href %>" class="movie-item">
<% } else { %>
<div class="movie-item">
<% } %>
    <img src="<%= film.Anh || '/images/movies/default.jpg' %>" alt="<%= film.TenPhim || '' %>">
    <div class="movie-item-content">
        <div class="movie-item-title">
            <%= film.TenPhim || 'Movie Title' %>
        </div>
        <div class="movie-infos">
            <div class="movie-info">
                <i class="bx bxs-star"></i>
                <span>9.5</span>
            </div>
            <div class="movie-info">
                <i class="bx bxs-time"></i>
                <span><%= film.ThoiLuong || 120 %> mins</span>
            </div>
            <div class="movie-info">
                <span>HD</span>
            </div>
            <div class="movie-info">
                <span>16+</span>
            </div>
        </div>
    </div>
<% if (typeof isLink !== 'undefined' && isLink) { %>
</a>
<% } else { %>
</div>
<% } %>
<!-- END MOVIE ITEM -->
